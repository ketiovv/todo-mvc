@model TodoMVC.Application.ViewModels.TodoListVm
@{
    ViewData["Title"] = "EditList";
}

<h1>EditList</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ListName" class="control-label"></label>
                <input asp-for="ListName" class="form-control" value="@Model.ListName" />
                <span asp-validation-for="ListName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

